            <Button x:Name="WP_Button_STOP" Foreground="#EEEEEE" FontFamily="Inter" Content="СТОП" FontSize="20" Width="Auto" Height="Auto" Grid.Column="9" Margin="5,5,0,5" Click="btnStop_Click" IsEnabled="{Binding button_STOP_enabled}"/>
