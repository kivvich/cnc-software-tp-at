                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Foreground="#EEEEEE" FontFamily="Inter" FontSize="19">ИЗМЕНИТЬ <LineBreak/> ИМЯ ФАЙЛА</TextBlock>
            </Button>

            <Button x:Name="WP_Button_Editor_2" Foreground="#EEEEEE" FontFamily="Inter" FontSize="20" Width="Auto" Height="Auto" Grid.Column="0" Margin="5,5" Click="WP_Editor_Save_File_Click">
