<Window x:Class="ModbusWPFproject.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModbusWPFproject"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        Title="Главный экран" Height="1080" Width="1920"
        >


    <Window.Resources>
        
        <Style x:Key="DataGridCellStyle" TargetType="{x:Type DataGridCell}">
            <Setter Property="TextBlock.FontFamily" Value="Inter Light"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
            <Setter Property="TextBlock.FontSize" Value="25"/>
            <Setter Property="Height" Value="50"/>
        </Style>

        <Style x:Key="CustomScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="CustomCheckBox" TargetType="{x:Type CheckBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Width="80" Height="30">
                                <Rectangle Fill="Transparent" />
                                <Border CornerRadius="10" BorderBrush="#76ACAE" BorderThickness="1" x:Name="ToggleBorder">
                                    <Ellipse Fill="Gray" Height="20" Width="20" HorizontalAlignment="Left" Margin="4,0" VerticalAlignment="Center" x:Name="ToggleEllipse"/>
                                </Border>
                            </Grid>
                            <ContentPresenter Grid.Column="1" Margin="4,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ToggleEllipse" Property="HorizontalAlignment" Value="Right" />
                                <Setter TargetName="ToggleBorder" Property="BorderBrush" Value="#76ACAE" />
                                <Setter TargetName="ToggleBorder" Property="Background" Value="#76ACAE" />
                                <Setter TargetName="ToggleEllipse" Property="Fill" Value="White" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="ToggleBorder" Property="BorderThickness" Value="1.5" />
                                <Setter TargetName="ToggleBorder" Property="BorderBrush" Value="#76ACAE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"></Setter>
        </Style>
        
        <Style x:Key="Sidemenu_Buttons_Style" TargetType="{x:Type Border}">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="#FF76ABAE"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="#FF266E71"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>

    </Window.Resources>

    
    <!-- Разметка всего экрана -->

    <Grid Background="#EEEEEE" ShowGridLines="False" SnapsToDevicePixels="True">        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.13*"/>
        </Grid.ColumnDefinitions>

        <!-- БОКОВОЕ МЕНЮ -->

            <!-- Основная часть-->
            <Grid Grid.Column="1" Grid.Row="0" Background="#31363F" ShowGridLines="False">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Labels_State}" Grid.Row="0" Foreground="#EEEEEE" FontSize="52" FontFamily="Inter Semibold" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor=""/>

                <Grid Grid.Row="1" IsEnabled="{Binding WP_Menu_IsEnabled}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="Button_mode_AUTO" BorderBrush="{Binding button_mode_auto_borderbrush}" IsEnabled="{Binding Button_AUTO_Enabled}" Background="{Binding button_mode_auto_color}" FontFamily="Inter" Foreground="#EEEEEE" FontSize="25" Width="Auto" Height="Auto" Grid.Row="0" Margin="5,5" Click="Button_mode_AUTO_Click" Cursor="None">
                    <TextBlock Text="АВТО" TextWrapping="Wrap" TextAlignment="Center" Foreground="#EEEEEE" FontFamily="Inter" FontSize="25" Cursor=""/>
                </Button>

                <Button  x:Name="Button_mode_1FRAME" BorderBrush="{Binding button_1frame_color_borderbrush}" IsEnabled="{Binding Button_1FRAME_Enabled}" Background="{Binding button_1frame_color}" FontFamily="Inter" Foreground="#EEEEEE" FontSize="25" Width="Auto" Height="Auto" Grid.Row="1" Margin="5,5" Click="Button_mode_1FRAME_Click" Cursor="None">
                    <TextBlock Text="РУЧНОЙ ВВОД КАДРА" TextWrapping="Wrap" TextAlignment="Center" Foreground="#EEEEEE" FontFamily="Inter" FontSize="25" Cursor=""/>
                </Button>

                <Button x:Name="Button_mode_1AXIS" BorderBrush="{Binding button_1axis_borderbrush}" IsEnabled="{Binding Button_1AXIS_Enabled}" Background="{Binding button_1axis_color}" FontFamily="Inter" Foreground="#EEEEEE" FontSize="25" Width="Auto" Height="Auto" Grid.Row="2" Margin="5,5" Click="Button_mode_1AXIS_Click" Cursor="None">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Foreground="#EEEEEE" FontFamily="Inter" FontSize="24" Cursor="">ОДНООСЕВАЯ ОБРАБОТКА</TextBlock>
                </Button>

                <Button x:Name="Button_mode_MANUAL" BorderBrush="{Binding button_manual_borderbrush}" IsEnabled="{Binding Button_MANUAL_Enabled}" Background="{Binding button_manual_color}" FontFamily="Inter" Foreground="#EEEEEE" FontSize="25" Width="Auto" Height="Auto" Grid.Row="3" Margin="5,5" Click="Button_mode_MANUAL_Click" Cursor="None">
                    <TextBlock Text="РУЧНЫЕ ПЕРЕМЕЩЕНИЯ" TextWrapping="Wrap" TextAlignment="Center" Foreground="#EEEEEE" FontFamily="Inter" FontSize="22" Cursor=""/>
                </Button>

                <Button x:Name="Button_mode_MEASURE" BorderBrush="{Binding button_measure_borderbrush}" IsEnabled="{Binding Button_MEASURE_Enabled}" Background="{Binding button_measure_color}" FontFamily="Inter" Foreground="#EEEEEE" FontSize="25" Width="Auto" Height="Auto" Grid.Row="4" Margin="5,5" Click="Button_mode_MEASURE_Click" Cursor="None">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Foreground="#EEEEEE" FontFamily="Inter" FontSize="24" Cursor="">ИЗМЕРЕНИЯ <LineBreak/> И ПРИВЯЗКИ</TextBlock>
                </Button>

                <Button x:Name="Button_mode_FINDNULL" BorderBrush="{Binding button_findnull_borderbrush}" IsEnabled="{Binding Button_FINDNULL_Enabled}" Background="{Binding button_findnull_color}" FontFamily="Inter" Foreground="#EEEEEE" Content="ПОИСК НУЛЯ" FontSize="25" Width="Auto" Height="Auto" Grid.Row="5" Margin="5,5" Click="Button_mode_FINDNULL_Click" Cursor="None"/>

                <Button x:Name="Button_EDITOR" FontFamily="Inter" IsEnabled="{Binding Button_EDITOR_Enabled}" Foreground="#EEEEEE" Content="РЕДАКТОР" FontSize="25" Width="Auto" Height="Auto" Grid.Row="6" Margin="5,5" Click="Button_EDITOR_Click"/>
                <Button x:Name="Button_SETTINGS" FontFamily="Inter" IsEnabled="{Binding Button_SETTINGS_Enabled}" Foreground="#EEEEEE" Content="НАСТРОЙКИ" FontSize="25" Width="Auto" Height="Auto" Grid.Row="7" Margin="5,5" Click="Button_SETTINGS_Click" Cursor="Hand"/>
                <Button x:Name="Button_DIAG" FontFamily="Inter" IsEnabled="{Binding Button_DIAG_Enabled}" Foreground="#EEEEEE" Margin="5,5,5,0" Content="ДИАГНОСТИКА" FontSize="22" Width="Auto" Height="Auto" Grid.Row="8" Cursor="Hand" Click="Button_DIAG_Click" />
            </Grid>
        </Grid>
            <!-- конец -->
        
            <!-- Нижняя часть - (время/дата) -->

            <Grid Grid.Column="1" Grid.Row="2" Background="#31363F" ShowGridLines="False" Cursor="">
            
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.8*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="TimeText" Text="{Binding TimeText}" FontFamily="Inter Light" FontSize="30" Foreground="#EEEEEE" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="0" Cursor=""/>
                <TextBlock x:Name="DateText" Text="{Binding DateText}" FontFamily="Inter Light" FontSize="20" Foreground="#EEEEEE" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1" />

            </Grid>

            <!-- конец -->
        
        <!-- конец БОКОВОЕ МЕНЮ -->

        <!-- //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
        <!-- МЕНЮ ДИАГНОСТИКИ -->
        <Border x:Name="WP_DIAG" Margin="300,100,300,100" BorderBrush="White" BorderThickness="1" Background="White" CornerRadius="30" d:Visibility="{Binding WP_Window_Diag_Visibility}" Panel.ZIndex="4">
            <Border.Effect>
                <DropShadowEffect Opacity="0.3" BlurRadius="40"/>
            </Border.Effect>

            <Border.Style>
                <Style>
                    <Style.Resources>
                        <Storyboard x:Key="FadeInMenu">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="{x:Null}">
                                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="1"/>
                            </DoubleAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="{x:Null}">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0.0" Value="{x:Static Visibility.Visible}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                        <Storyboard x:Key="FadeOutMenu">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="{x:Null}">
                                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0"/>
                            </DoubleAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="{x:Null}">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0.0" Value="{x:Static Visibility.Visible}"/>
                                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Collapsed}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </Style.Resources>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding WP_DIAG_Open}" Value="true">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource FadeInMenu}"/>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource FadeOutMenu}"/>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                    <Setter Property="Border.Visibility" Value="Hidden" />
                </Style>
            </Border.Style>

            <Border BorderThickness="2" BorderBrush="LightGray" CornerRadius="30" Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="WP_DIAG_Close" FontSize="15" FontFamily="Inter Thin" Background="White" BorderBrush="LightGray" Foreground="LightGray" Width="40" Height="40" Padding="0" Content="Х" Click="WP_DIAG_Close_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15" Grid.Column="1" Panel.ZIndex="2"/>

                    <Grid x:Name="DIAG_Sensors_Menu" Visibility="{Binding DIAG_Sensors_Menu_Visibility}" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <GroupBox Grid.Row="0" Grid.Column="0" Margin="10,13,0,5">
                            <GroupBox.Header>
                                <TextBlock FontFamily="Inter Medium" FontSize="22" HorizontalAlignment="Center" Foreground="White">Датчик №1</TextBlock>
                            </GroupBox.Header>
                            <DataGrid Margin="-9"></DataGrid>
                        </GroupBox>

                        <GroupBox Grid.Row="1" Grid.Column="0" Margin="10,5,0,10">
                            
                            <GroupBox.Header>
                                <TextBlock FontFamily="Inter Medium" FontSize="22" HorizontalAlignment="Center" Foreground="White">Датчик №2</TextBlock>
                            </GroupBox.Header>
                            
                            <DataGrid x:Name="Datagrid_Diag_Sensors_DG2" VerticalScrollBarVisibility="Disabled" Background="#F7F7F7" HorizontalGridLinesBrush="#DFDFDF" VerticalGridLinesBrush="#DFDFDF" GridLinesVisibility="All" Margin="-8" FontFamily="Inter" FontSize="14" AutoGenerateColumns="False">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Параметр" Width="*" IsReadOnly="True" Binding="{Binding Name}">

                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="FontSize" Value="13" />
                                                <Setter Property="Padding" Value="0" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="TextWrapping" Value="Wrap" />
                                                <Setter Property="TextAlignment" Value="Justify" />
                                                <Setter Property="MaxWidth" Value="200" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>

                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Значение" Width="0.51*" IsReadOnly="True" Binding="{Binding Value}">

                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="FontSize" Value="13" />
                                                <Setter Property="Padding" Value="0" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>

                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <GroupBox Grid.Row="0" Grid.Column="1" Margin="10,13,10,5">
                            <GroupBox.Header>
                                <TextBlock FontFamily="Inter Medium" FontSize="22" HorizontalAlignment="Center" Foreground="White">Датчик №3</TextBlock>
                            </GroupBox.Header>
                            <DataGrid Margin="-9"></DataGrid>
                        </GroupBox>

                        <GroupBox Grid.Row="1" Grid.Column="1" Margin="10,5,10,10">
                            <GroupBox.Header>
                                <TextBlock FontFamily="Inter Medium" FontSize="22" HorizontalAlignment="Center" Foreground="White">Датчик №4</TextBlock>
                            </GroupBox.Header>
                            <DataGrid Margin="-9"></DataGrid>
                        </GroupBox>

                    </Grid>

                    <Grid x:Name="DIAG_Gen_Menu" Visibility="{Binding DIAG_Gen_Menu_Visibility}" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.9*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.2*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        
                        <GroupBox Grid.Row="0" Grid.Column="0" Margin="10,13,0,5">
                            <GroupBox.Header>
                                <TextBlock FontFamily="Inter Medium" FontSize="19" HorizontalAlignment="Center" Foreground="White">Смена режима</TextBlock>
                            </GroupBox.Header>
                            
                            <Grid>
                                <TextBox x:Name="DIAG_Gen_txt" Margin="5,0,0,0" Width="220" HorizontalAlignment="Left" FontFamily="Inter" FontSize="30"></TextBox>
                                <Button x:Name="DIAG_Gen_txt_button" Width="100" HorizontalAlignment="Right" Content="Сменить" FontFamily="Inter" Foreground="White" Click="DIAG_Gen_txt_button_click"></Button>
                            </Grid>
                            
                            </GroupBox>
                    </Grid>

                    <Border CornerRadius="0" Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,2,0">
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <fa:ImageAwesome Foreground="White" Margin="30,0,0,0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Icon="Tachometer" Width="40" Height="40" Panel.ZIndex="1"/>
                            <fa:ImageAwesome Foreground="White" Margin="20,0,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Icon="Usb" Width="40" Height="40" Panel.ZIndex="1"/>
                            <fa:ImageAwesome Foreground="White" Margin="40,0,0,0" Grid.Row="7" HorizontalAlignment="Left" VerticalAlignment="Center" Icon="ArrowCircleOutlineRight" Width="40" Height="40" Panel.ZIndex="1"/>

                            <Border Style="{StaticResource Sidemenu_Buttons_Style}" x:Name="DIAG_Menu_Button_1" CornerRadius="30,0,0,0" Grid.Row="0" BorderThickness="2,2,2,1" BorderBrush="#B1D5D7" PreviewMouseDown="DIAG_Menu_Button_Sensors_PreviewTouchDown">
                                <TextBlock Margin="0,0,30,0" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="30" FontFamily="Inter Light" Foreground="White">Датчики</TextBlock>
                            </Border>

                            <Border Style="{StaticResource Sidemenu_Buttons_Style}" x:Name="DIAG_Menu_Button_2" Grid.Row="1" BorderThickness="2,1,2,1" BorderBrush="#B1D5D7">
                                <TextBlock Margin="0,0,20,0" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="30" FontFamily="Inter Light" Foreground="White" PreviewMouseDown="DIAG_Menu_Button_Generator_PreviewTouchDown">Генератор</TextBlock>
                            </Border>

                            <Border Style="{StaticResource Sidemenu_Buttons_Style}" x:Name="DIAG_Menu_Button_3" Grid.Row="2" BorderThickness="2,1,2,1" BorderBrush="#B1D5D7">
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontFamily="Inter Light" Foreground="White">Сеть</TextBlock>
                            </Border>

                            <Border Style="{StaticResource Sidemenu_Buttons_Style}" x:Name="DIAG_Menu_Button_4" Grid.Row="3" BorderThickness="2,1,2,1" BorderBrush="#B1D5D7">
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontFamily="Inter Light" Foreground="White">Плата</TextBlock>
                            </Border>

                            <Border Style="{StaticResource Sidemenu_Buttons_Style}" x:Name="DIAG_Menu_Button_5" Grid.Row="4" BorderThickness="2,1,2,1" BorderBrush="#B1D5D7">
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontFamily="Inter Light" Foreground="White">Установка</TextBlock>
                            </Border>

                            <Border Style="{StaticResource Sidemenu_Buttons_Style}" x:Name="DIAG_Menu_Button_6" Grid.Row="5" BorderThickness="2,1,2,1" BorderBrush="#B1D5D7">
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontFamily="Inter Light" Foreground="White">Насос</TextBlock>
                            </Border>

                            <Border Style="{StaticResource Sidemenu_Buttons_Style}" x:Name="DIAG_Menu_Button_7" Grid.Row="6" BorderThickness="2,1,2,1" BorderBrush="#B1D5D7">
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontFamily="Inter Light" Foreground="White">Общее</TextBlock>
                            </Border>

                            <Border Style="{StaticResource Sidemenu_Buttons_Style}" x:Name="DIAG_Menu_Button_CloseApp" CornerRadius="0,0,0,30" Grid.Row="7" BorderThickness="2,2,2,1" BorderBrush="#B1D5D7" PreviewMouseDown="DIAG_Menu_Button_CloseApp_PreviewTouchDown">
                                <TextBlock Margin="0,0,50,0" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="30" FontFamily="Inter Light" Foreground="White">Выход</TextBlock>
                            </Border>

                        </Grid>
                    </Border>
                    <!-- НАСТРОЙКИ - ОБЛАСТЬ МЕНЮШЕК -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                    </Grid>

                </Grid>

            </Border>
        </Border>
        <!-- МЕНЮ НАСТРОЕК -->
        <Border x:Name="WP_Settings" Margin="300,100,300,100" BorderBrush="White" BorderThickness="1" Background="White" CornerRadius="30" d:Visibility="{Binding WP_Window_Settings_Visibility}" Panel.ZIndex="3">
            <Border.Effect>
                <DropShadowEffect Opacity="0.3" BlurRadius="40"/>
            </Border.Effect>

            <Border.Style>
                <Style>
                    <Style.Resources>
                        <Storyboard x:Key="FadeInMenu">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="{x:Null}">
                                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="1"/>
                            </DoubleAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="{x:Null}">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0.0" Value="{x:Static Visibility.Visible}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                        <Storyboard x:Key="FadeOutMenu">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="{x:Null}">
                                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0"/>
                            </DoubleAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="{x:Null}">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0.0" Value="{x:Static Visibility.Visible}"/>
                                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Collapsed}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </Style.Resources>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding WP_Settings_Open}" Value="true">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource FadeInMenu}"/>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource FadeOutMenu}"/>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                    <Setter Property="Border.Visibility" Value="Hidden" />
                </Style>
            </Border.Style>

            <Border BorderThickness="2" BorderBrush="LightGray" CornerRadius="30" Margin="10">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="WP_Settings_Close" FontSize="15" FontFamily="Inter Thin" Background="White" BorderBrush="LightGray" Foreground="LightGray" Width="40" Height="40" Padding="0" Content="Х" Click="WP_Settings_Close_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15" Grid.Column="1" Panel.ZIndex="2"/>

                    <Border CornerRadius="0" Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,2,0">
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Style="{StaticResource Sidemenu_Buttons_Style}" x:Name="SETTINGS_Menu_Button_1" CornerRadius="30,0,0,0" Grid.Row="0" BorderThickness="2,2,2,1" BorderBrush="#B1D5D7" PreviewMouseDown="DIAG_Menu_Button_Sensors_PreviewTouchDown">
                                <TextBlock Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontFamily="Inter Light" Foreground="White">Общие</TextBlock>
                            </Border>

                            <Border Style="{StaticResource Sidemenu_Buttons_Style}" x:Name="SETTINGS_Menu_Button_2" Grid.Row="1" BorderThickness="2,1,2,1" BorderBrush="#B1D5D7">
                                <TextBlock Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontFamily="Inter Light" Foreground="White">Интерфейс</TextBlock>
                            </Border>

